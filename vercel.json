{
  "version": 2,
  "builds": [
    {
      "src": "api-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api-server.js"
    },
    {
      "source": "/admin",
      "destination": "/public/admin-login.html"
    },
    {
      "source": "/admin-dashboard",
      "destination": "/public/admin-dashboard.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/index.html"
    }
  ]
}